<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:padding="15dp"
              android:layout_height="match_parent">

    <TextView
            android:text="@string/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/question" android:textSize="24sp"
    />
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="241dp" android:id="@+id/btn_ans"
            android:padding="15dp" android:layout_marginTop="20dp">
        <RadioButton
                android:text="@string/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/r_btn_a" android:layout_weight="1"/>
        <RadioButton
                android:text="@string/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/r_btn_b" android:layout_weight="1"/>
        <RadioButton
                android:text="@string/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/r_btn_c" android:layout_weight="1"/>
        <RadioButton
                android:text="@string/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/r_btn_d" android:layout_weight="1"/>
    </RadioGroup>
    <Button
            android:text="@string/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/submit"
            style="@style/Widget.AppCompat.Button"
            android:layout_marginTop="20dp"/>


</LinearLayout>